<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.projetodeliverytcc.ProductList">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <com.mancj.materialsearchbar.MaterialSearchBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchBar"
        android:layout_alignParentTop="true"
        app:mt_speechMode="false"
        app:mt_hint="Digite o Produto"
        app:mt_searchBarColor="@android:color/darker_gray"
        app:mt_textColor="@android:color/white"
        app:mt_hintColor="@android:color/white"
        app:mt_highlightedTextColor="@android:color/white"
        app:mt_dividerColor="@android:color/white"
        app:mt_placeholderColor="@android:color/white"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/recycler_product"
        />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
